# Website Migration Platform - Environment Configuration

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=Website Migration Platform
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/migration_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=migration_db
DB_USER=postgres
DB_PASSWORD=password

# ============================================================================
# Redis Configuration (for Celery task queue)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# AI/ML API Keys
# ============================================================================
# OpenAI API (for GPT-4 Vision, layout analysis, and similarity checking)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude API (optional, for additional AI features)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ============================================================================
# Storage Configuration
# ============================================================================
# S3 or S3-compatible storage (MinIO, DigitalOcean Spaces, etc.)
S3_BUCKET=migration-platform-assets
S3_REGION=us-east-1
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_ENDPOINT=https://s3.amazonaws.com  # Change for MinIO or other S3-compatible

# Local storage path (for development)
LOCAL_STORAGE_PATH=./storage

# ============================================================================
# Authentication & Security
# ============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================================================
# Email Configuration (for notifications)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@migrationplatform.com

# ============================================================================
# Web Scraping Configuration
# ============================================================================
# Playwright browser settings
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
SCREENSHOT_WIDTH=1920
SCREENSHOT_HEIGHT=1080

# Rate limiting
SCRAPER_DELAY=1000  # ms between requests
SCRAPER_MAX_PAGES=50  # max pages per site

# ============================================================================
# Deployment Providers
# ============================================================================
# DigitalOcean
DO_API_TOKEN=your-digitalocean-api-token

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# WP Engine
WPENGINE_API_KEY=your-wpengine-api-key

# ============================================================================
# Monitoring & Analytics
# ============================================================================
SENTRY_DSN=your-sentry-dsn  # Error tracking
ANALYTICS_ID=your-analytics-id

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_AI_ANALYSIS=true
ENABLE_SIMILARITY_CHECK=true
ENABLE_AUTO_DEPLOYMENT=false
ENABLE_AI_EDITING=false  # Coming soon

# ============================================================================
# Limits & Quotas
# ============================================================================
MAX_MIGRATION_SIZE_MB=500
MAX_ASSETS_PER_SITE=1000
FREE_TIER_MIGRATIONS=3
PRO_TIER_MIGRATIONS=50

# ============================================================================
# Frontend Configuration
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Website Migration Platform
NEXT_PUBLIC_ENABLE_PREVIEW=true
